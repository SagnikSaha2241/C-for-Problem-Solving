#include <stdio.h>


int main() 
{
    int *arr;
	int size, i, n;

    printf("Enter the size of array:");
    scanf("%d",&size);
    
    for(i = 0; i < n; i++)
    {
    	scanf("%d",arr[i]);
	}
    
    for (int i = 0; i < size; i++) 
	{
        printf("%d ", arr[i]);
    }
    
    printf("\n");

    insert_element(arr, size, n);
    size++; 
    
    printf("Array after insertion: ");
    
    for (int i = 0; i < size; i++)
	{
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
    
}



void insert_element(int arr[], int size, int element) 
{
    int i;
    for (i = size - 1; i >= 0 && arr[i] > element; i--) 
	{
        arr[i + 1] = arr[i];
    }
    arr[i + 1] = element;
}
